<% if comments %>
  <% comments.each do |comment| %>
    <% user = comment.user %>
    <div class="container px-1 py-2 p-sm-3 border-top-0" style="border: 1px solid #f1f3f5;">
      <div class="d-flex">
        <!-- user image -->
        <div>
          <a href="<%= user_path(user) %>" class="me-sm-2"><img src="/user_icons/<%= user.image %>" alt="icon" class="profile-icon small-icon"></a>
        </div>
        <!-- content -->
        <div class="container p-0">
          <div class="align-items-center">
            <div class="d-flex align-items-center">
              <p class="m-0"><a href="<%= user_path(user) %>" class="h6 text-dark me-1 p-0 m-0"><%= user.name %></a></p>
              <p class="m-0"><a href="<%= user_path(user) %>" class="small text-muted me-1 p-0 m-0"><u>@<%= user.user_name %></u></a></p>
            </div>
            <div class="d-flex align-items-center">
              <p class="small text-muted p-0 m-0"><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
              <% if comment.user_id == @current_user.id %>
                <%= button_to("", post_comment_path(post, comment), { method: :delete, class: "border-0 bg-transparent fas fa-trash-alt text-muted" }) %>
              <% end %>
            </div>
          </div>

          <div class="position-relative">
            <p class="m-0"><small><%= comment.content %></small></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>