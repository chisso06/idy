<% provide(:title, "みんなのアイデア") %>

<% if @current_user %>
	<%= render partial: 'posts/form', locals: { post: Post.new, url: posts_path, button_text: "投稿する！" } %>
	<hr class="m-0 mt-2">
<% end %>

<!-- posts -->
<ul class="nav nav-tabs nav-fill" id="myTab1" role="tablist">
  <li class="nav-item" role="presentation">
    <a
      class="nav-link active"
      id="myTab2-tab-1"
      data-mdb-toggle="tab"
      href="#myTab2-tabs-1"
      role="tab"
      aria-controls="myTab2-tabs-1"
      aria-selected="true"
			>
      フォローしているユーザー
    </a>
  </li>
  <li class="nav-item" role="presentation">
    <a
      class="nav-link"
      id="myTab2-tab-2"
      data-mdb-toggle="tab"
      href="#myTab2-tabs-2"
      role="tab"
      aria-controls="myTab2-tabs-2"
      aria-selected="false"
    >
			すべてのユーザー
    </a>
  </li>
</ul>

<div class="tab-content" id="myTab2-content">
  <div class="tab-pane fade show active" id="myTab2-tabs-1" role="tabpanel" aria-labelledby="myTab2-tab-1">
		<%= render partial: 'layouts/posts', locals: { posts: @search_following_posts.reverse } %>
  </div>
  <div class="tab-pane fade" id="myTab2-tabs-2" role="tabpanel" aria-labelledby="myTab2-tab-2">
		<%= render partial: 'layouts/posts', locals: { posts: @search_posts.reverse } %>
	</div>
</div>
