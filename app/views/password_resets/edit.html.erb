<% provide(:title, "パスワード再設定") %>
<h1>新しいパスワード</h1>

<%= form_with(model: @user, url: password_reset_url(params[:id]), local: true) do |f| %>

	<%= hidden_field_tag :email, @user.email %>

  <%= f.label :新しいパスワード %>
  <%= f.password_field :password %>
	<br>
	<%= f.label :パスワード確認 %>
	<%= f.password_field :password_confirmation %>
	<br>
	<%= f.submit "次へ" %>
<% end %>